.game-details-modal
  .modal-header
    %h3.modal-title.title
      {{ selectedGame.title }}

  .modal-body
    %img.image-responsive.center-block(ng-src="{{selectedGame.image}}")

    .description
      {{ selectedGame.description }}

    .container-fluid
      .col-sm-6.text-center
        %a.btn.btn-lg.btn-primary(ng-href="#/games/{{ selectedGame.id }}")
          Zagraj!

      .col-sm-6.text-center
        .btn.btn-lg.btn-warning(ng-click="close()")
          Wróć
