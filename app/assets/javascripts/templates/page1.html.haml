%div.popup-wrapper
  %div(ng-include src="'#{asset_path('templates/popup.html')}'")
%header
  %a.open-popup(ng-click="openPopup = !openPopup" my-open="openPopup")
    %i.fa.fa-bars
  %ul
    %li(ng-repeat="category in categories" ng-class="currentCategory ==  $index ? 'active' : ''" )
      %a.read-text(ng-click="switchCategory()" id="{{$index}}")
        {{category.name}}
        %i.fa.fa-volume-up(ng-click="playSound()")

%article.tile-items
  %section.tile-item(ng-repeat="tile in tiles" data-id="{{tile.id}}")
    %img(ng-src="{{tile.image_uri}}")

%article.placeholders
  %section.placeholder
  %section.placeholder
  %section.placeholder
  %section.placeholder
  %section.placeholder
  %section.placeholder

%a.finish-game(ng-click="finishGame()")
  %i.fa.fa-check

%div.popup-ratings
  %div(ng-include src="'#{asset_path('templates/rating.html')}'")
